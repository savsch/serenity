<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    android:paddingTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/bogus_id_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="This app automates signing into this institute login page so you don't have to do it yourself:"
        />
    <ImageView
        android:id="@+id/bogus_id_2"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/bogus_id_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.4:1"

        android:background="@drawable/about_image"
        />
    <TextView
        android:id="@+id/clickable_tv1"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/bogus_id_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>